---
// Logo Zone Component - Displays the three brand logos above navigation
import { Image } from 'astro:assets';
import mocesLogo from '../assets/moces.png';
import zonaLogo from '../assets/zonadesconforto.png';
import comfyLogo from '../assets/comfy.png';
---

<section class="relative w-full pt-10 pb-10 flex justify-center items-center bg-transparent">
  <div class="flex flex-col items-center justify-center gap-5 w-auto h-auto px-5 opacity-100 sm:flex-row sm:items-center sm:gap-6 sm:w-[646px] sm:h-36 sm:px-0 lg:gap-20">
    <!-- Hamburger aligned to the left of the first logo (visible on mobile/tablet) -->
    <button id="menu-toggle" class="lg:hidden flex flex-col justify-center items-center w-14 h-12 rounded-[80px] bg-[#B496C8] shadow-[0_4px_20px_rgba(180,150,200,0.3)] mr-2" aria-label="Abrir menu de navegação">
      <span class="w-6 h-[2px] bg-white rounded-sm"></span>
      <span class="w-6 h-[2px] bg-white rounded-sm my-1"></span>
      <span class="w-6 h-[2px] bg-white rounded-sm"></span>
    </button>
    <!-- Moces Logo (Left) -->
    <div class="flex items-center justify-center flex-shrink-0 w-44 h-9 sm:w-[120px] sm:h-6">
      <Image
        src={mocesLogo}
        alt="Moces - Organização sem fins lucrativos"
        width={176}
        height={36}
        loading="eager"
        decoding="async"
        class="w-full h-full object-contain"
      />
    </div>

    <!-- Zona de(s) Conforto Logo (Center) -->
    <div class="flex items-center justify-center flex-shrink-0 w-36 h-36 sm:w-20 sm:h-20">
      <Image
        src={zonaLogo}
        alt="Zona de(s) Conforto"
        width={144}
        height={144}
        loading="eager"
        decoding="async"
        class="w-full h-full object-contain"
      />
    </div>

    <!-- Comfy Logo (Right) -->
    <div class="flex items-center justify-center flex-shrink-0 w-[166px] h-14 rounded p-2 sm:w-[110px] sm:h-[37px]">
      <Image
        src={comfyLogo}
        alt="Comfy App"
        width={166}
        height={56}
        loading="eager"
        decoding="async"
        class="w-full h-full object-contain"
      />
    </div>
  </div>
  <script is:inline>
    const btn = document.getElementById('menu-toggle');
    if (btn) {
      btn.addEventListener('click', () => {
        window.dispatchEvent(new Event('toggle-menu'));
      });
    }
  </script>
</section>
